{
  "manifest_version": 3,
  "name": "JobApp Counter",
  "description": "Extension to count the number of jobs applied per day",
  "permissions": ["storage", "activeTab", "scripting","tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "version": "2.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/icon.png"
  },
  "commands": {
    "increment": {
      "suggested_key": {
        "windows": "Ctrl+B"
      },
      "description": "Increment when Ctrl+B is pressed"
    },
    "decrement": {
      "suggested_key": {
        "windows": "Alt+B"
      },
      "description": "Decrement when Alt+B is pressed"
    }
  }
}